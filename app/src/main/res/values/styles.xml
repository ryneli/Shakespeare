<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
    <!-- customize the color palette -->
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="ToolbarText">
    <item name="android:textSize">@dimen/toolbar_title_size</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="TabText">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="Text">
    <item name="android:textIsSelectable">true</item>
  </style>

  <style name="Text.Title">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.Title.Scene">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/red</item>
    <item name="android:layout_marginTop">8dp</item>
  </style>

  <style name="Text.Subtitle">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Text.CharacterName">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">8dp</item>
  </style>

  <style name="Text.Sentence">
    <item name="android:textSize">16sp</item>
  </style>

</resources>
